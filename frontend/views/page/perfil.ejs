<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include("../partials/head") %>
    <link rel="stylesheet" href="./style/splide.min.css">
    <link rel="stylesheet" href="./style/themes/splide-sea-green.min.css">
    <link rel="stylesheet" href="./style/splide-core.min.css">
    <link rel="stylesheet" href="./style/perfil.css">
</head>

<body>
  <header>
    <%- include("../partials/headercadastrado") %>
  </header>
  <div class="fundo">
    <div class="row">
      <div class=" left">
        <div class="perfil-parte-img">
          <img class="div-img" src="https://icon-library.com/images/profile-png-icon/profile-png-icon-1.jpg"
            width="90%">
          <h3 class="nome-usuario"></h3>
          <section class="container">
            <button id="button" class="button" data-hover="Editar perfil">
              <div class="divButton"><img src="/img/lapis.png" width="25%"></div>
            </button>
            <div id="editPerfil" class="editPerfil">
              <div class="modal-content">
                <div style="font-size: 2rem;"> Editar perfil<span class="fechar">&times;</span></div>

                <div id="foto" class="editarPerfil">
                  <img class="div-img-edit"
                    src="https://icon-library.com/images/profile-png-icon/profile-png-icon-1.jpg">


                  <b class="indicador">Nome</b>
                  <div class=" name input" id="input"><b id="b"> nome do usuario</b><img id="img-edit" class="img-edit"
                      src="/img/lapis.png"></div>
                </div>
                <div class="editarPerfil">
                  <b class="indicador">e-mail</b>
                  <div class=" name input" id="input"><b id="b">email@usuaro.com</b><img id="img-edit-email"
                      class="img-edit-email" src="/img/lapis.png"></div>
                </div>
                <div class="editarPerfil">
                  <b class="indicador">senha</b>
                  <div class=" name input" id="input"><b id="b">rootroot</b><img class="img-edit-senha"
                      id="img-edit-senha" src="/img/lapis.png"></div>
                </div>
              </div>
          </section>
        </div>
      </div>
      <div class=" right">
        <div class="perguntas " style="color: #fff;" id="pergunta"><b>Perguntas</b></div>
        <div class="perguntas" style="color: #fff;" id="resposta"><b>Respostas</b></div>
        <spam class="div" id='a'></spam>
      </div>
    </div>
  </div>
  <script src="/js/validacao/perfil.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  </section>
</body>

<footer>
  <%- include("../partials/footer") %>
</footer>

</html>