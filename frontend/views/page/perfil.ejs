<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include("../partials/head") %>
    <link rel="stylesheet" href="./style/splide.min.css">
    <link rel="stylesheet" href="./style/themes/splide-sea-green.min.css">
    <link rel="stylesheet" href="./style/splide-core.min.css">
    <link rel="stylesheet" href="./style/perfil.css">
</head>

<body>
  <header>
    <%- include("../partials/headersemcad") %>
      <%- include("../partials/headercadastrado") %>
  </header>
  <div class="fundo">
    <div class="row">
      <div class=" left">
        <div class="perfil-parte-img">
          <img class="img-perfil" src="https://cdn-icons-png.flaticon.com/512/5087/5087579.png" alt="Foto de perfil">
          <h3 class="nome-usuario"></h3>
          <section class="container">
            <button id="button" class="button" data-hover="Editar perfil">
              <div class="divButton"><img src="/img/lapis.png" width="25%"></div>
            </button>
            <div id="editPerfil" class="editPerfil">
              <div class="modal-content">
                <div style="font-size: 2rem;"> Editar perfil<span class="fechar">&times;</span></div>

                <div id="foto" class="editarPerfil">
                  <img class="div-img-edit"
                    src="https://cdn-icons-png.flaticon.com/512/5087/5087579.png">
                </div>

                <form>
                  <div class="editarPerfil">
                    <label class="indicador">Nome</label>
                    <div class="edit-nome">
                      <input class="name input" id="input-edit-nome" disabled>
                      <img id="img-edit" class="img-edit" src="/img/lapis.png">
                    </div>
                  </div>

                  <div class="editarPerfil">
                    <label class="indicador">E-mail</label>
                    <div class="edit-email">
                      <input class="name input" id="input-edit-email" disabled>
                      <img id="img-edit-email" class="img-edit-email" src="/img/lapis.png">
                    </div>
                  </div>

                  <div class="editarPerfil">
                    <label class="indicador">Senha</label>
                    <div class="edit-senha">
                      <input type="password" class="name input" id="input-edit-senha" placeholder="Edite sua senha..."
                        disabled>
                      <img class="img-edit-senha" id="img-edit-senha" src="/img/lapis.png">
                    </div>
                    <button onclick="editandoUsuario()" type="button" class="btn-edit-enviar">Enviar</button>
                  </div>
                </form>
              </div>
          </section>

        </div>
      </div>
      <div class=" right">
        <div class="perguntas" style="color: #fff;" id="pergunta"><b>Perguntas</b></div>
        <div class="respostas" style="color: #fff;" id="resposta"><b>Respostas</b></div>
        <spam class="div" id='a'></spam>
      </div>
    </div>

    <%- include("../partials/modalEditPerfil") %>

  </div>
  <script src="/js/validacao/perfil.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script src="/js/fetch/usuario/editarUsuario.js"></script>
  <script src="/js/validacao/editarPerfil.js"></script>
  <script src="/js/fetch/usuario/pegandoPerguntasUsuario.js"></script>
  </section>
</body>

<footer>
  <%- include("../partials/footer") %>
</footer>

</html>